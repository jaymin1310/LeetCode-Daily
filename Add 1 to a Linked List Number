/*

struct Node
{
    int data;
    struct Node* next;

    Node(int x){
        data = x;
        next = NULL;
    }
};

*/


class Solution {
  public:
    int recursion(Node* head){
        if(head==NULL){
            return 1;
        }
        int carry=recursion(head->next);
        head->data=head->data+carry;
        if(head->data<10)return 0;
        head->data=0;
        return 1;
    }
    Node* addOne(Node* head) {
        // Your Code here
        int carry=recursion(head);
        if(carry==1){
            Node* temp=new Node(1);
            temp->next=head;
            head=temp;
        }
        return head;
        // return head of list after adding one
    }
};iiiiii
